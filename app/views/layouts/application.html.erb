<!DOCTYPE html>
<html>
<head>
  <title>Acadorize</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div id="layout-header-holder" class="layout-holder">

	<%- #-----THE HEADER----- %>
	<header id="layout-header">
		<h4 id="layout-title">Acadorize</h4>

		<ul id="session-options">
			<% if current_teacher %>
				<li><%= link_to "Logout", logout_path %></li>
			<% else %>
				<li><%= link_to "Register", new_teacher_path %></li>
				<li><%= link_to "Login", login_path %></li>
			<% end %>
		</ul>
		
	</header>

</div>


<div class="container">
	<% if flash[:notice] %>
		<div id="flash" class="flash notice"><p><%= flash[:notice] %></p></div>
	<% end %>

	<% if flash[:alert] %>
		<div id="flash" class="flash alert"><p><%= flash[:alert] %></p></div>
	<% end %>

	<%= yield %>
</div>


<div id="layout-footer-holder" class="layout-holder">

	<%- #-----THE FOOTER----- %>
	<footer id="layout-footer">

		<nav id="footer-home-navigation">

			<ul>
				<li><%= link_to "Home", home_path %></li>
				<li><%= link_to "Contact", contact_path %></li>
			</ul>

		</nav>

	</footer>

</div>

</body>
</html>
