<h1>Log In</h1>

<%= form_tag sessions_path do %>

	<div class="form-fields">
		<ul>
			<li class="input-field">
				<%= label_tag :email %>
				<%= text_field_tag :email, params[:email] %>
			</li>

			<li class="input-field">
				<%= label_tag :password %>
				<%= password_field_tag :password %>
			</li>

			<li class="submit-field">
				<%= submit_tag "Login", :id => "login" %>
			</li>
		</ul>
	</div>

<% end %>